                <button id="signup" class="btn btn-success" rel="tooltip" title="first tooltip">Login</button>
                - or -
                <div class="btn btn-large"><a href="/Register" class="fancybox fancybox.iframe">Sign-up</a></div>
              </div>
            </div>
          </fieldset>
        </form>
